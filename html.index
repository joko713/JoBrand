        </section>
        
        <!-- SECTION 3: Application Examples -->
        <section class="pb-12">
            <div class="flex items-center gap-2 mb-8">
                <i data-lucide="layout" class="text-[#365A72]"></i>
                <h2 class="text-2xl font-bold text-[#151821]">UI Components</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Card 1: Primary Action -->
